@model ForumTry.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<head>
    <style>

        #login {
            position: absolute;
            left: 40%;
            top: 40%;
        }
    </style>
</head>
<body>
    <h1>Login</h1>
    <br />
    <div class="container">
        <form>
            <div class="row">
                <div class="col-md-2">
                    <label asp-for="Username"></label>
                </div>
                <div class="col-md-2">
                    <input asp-for="Username" />
                    <span asp-validation-for="Username"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2">
                    <label asp-for="Password"></label>
                </div>
                <div class="col-md-2">
                    <input asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6 offset-2">
                    <input type="submit" class="btn btn-dark btn-sm" value="Inloggen" asp-controller="Account" asp-action="Login" formmethod="post" />
                    <input type="submit" class="btn btn-dark btn-sm" value="Registreren" asp-controller="Account" asp-action="Create" formnovalidate="formnovalidate" />
                </div>
            </div>
        </form>
    </div>
</body>

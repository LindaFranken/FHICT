
@model ForumTry.Models.RegisterViewModel
@{
    ViewData["Title"] = "Registratie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Registratie</h1>
<br />

<div class="container">
    <form>
        <div class="row">
            <div class="col-md-2">
                <label asp-for="Username"></label>
            </div>
            <div class="col-md-2">
                <input asp-for="Username" />
                <span asp-validation-for="Username"></span>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-2">
                <label asp-for="Email"></label>
            </div>
            <div class="col-md-2">
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-2">
                <label asp-for="Password"></label>
            </div>
            <div class="col-md-2">
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-2">
                <label asp-for="ConfirmPassword"></label>
            </div>
            <div class="col-md-2">
                <input asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-6 offset-2">
                <input class="btn btn-lg btn-dark btn-block" type="submit" value="Register" asp-controller="Account" asp-action="Create" formmethod="post">
            </div>
        </div>
    </form>
</div>

@model ForumTry.Models.ForumViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Topic</h1>
<form>
    <div>
        <label asp-for="Title"></label>
    </div>
    <div>
        <input asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
    <div>
        <label asp-for="Description"></label>
    </div>
    <div>
        <textarea asp-for="Description" style="height:200px;width:700px"></textarea>
        <span asp-validation-for="Description"></span>
    </div>
    <div>
        <input class="btn btn-lg btn-dark btn-block" type="submit" value="Maak aan" asp-controller="Home" asp-action="Create" formmethod="post" />
    </div>
</form>